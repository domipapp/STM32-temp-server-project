UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;

/* USER CODE BEGIN PV */

uint8_t rx_buffer;
uint8_t recieved_message[RECIEVED_MESSAGE_SIZE] = {'\0'};
enum state { STATE_CONNECT_WIFI, STATE_CONNECT_SERVER, STATE_SEND_CIPSEND, STATE_SEND_DATA };

/* USER CODE END PV */

